#. type: delimited block -
#: upstream/_posts/2023-07-10-quarkus-component-test.adoc:259
#, no-wrap
msgid "    }\n"
msgstr ""

#. type: delimited block -
#: upstream/_posts/2023-07-10-quarkus-component-test.adoc:263
#, no-wrap
msgid ""
"    @SimpleBinding\n"
"    @Interceptor\n"
"    static class SimpleMockInterceptor {  <2>\n"
msgstr ""

#. type: delimited block -
#: upstream/_posts/2023-07-10-quarkus-component-test.adoc:268
#, no-wrap
msgid ""
"        @AroundInvoke\n"
"        Object aroundInvoke(InvocationContext context) throws Exception {\n"
"            return context.proceed().toString().toUpperCase();\n"
"        }\n"
msgstr ""

#. type: delimited block -
#: upstream/_posts/2023-07-10-quarkus-component-test.adoc:271
#, no-wrap
msgid ""
"    }\n"
"}\n"
msgstr ""

