#: upstream/_guides/hibernate-orm.adoc:1238
#, no-wrap
msgid ""
"@PersistenceUnitExtension // <1>\n"
"public class MyStatementInspector implements StatementInspector { // <2>\n"
"    @Override\n"
"    public String inspect(String sql) {\n"
"        // ...\n"
"        return sql;\n"
"    }\n"
"}\n"
msgstr ""

#. type: Plain text
#: upstream/_guides/hibernate-orm.adoc:1241
