#. type: delimited block -
#: upstream/_guides/security-webauthn.adoc:1107
#, no-wrap
msgid ""
"@QuarkusTest\n"
"public class WebAuthnResourceTest {\n"
msgstr ""

#. type: delimited block -
#: upstream/_guides/security-webauthn.adoc:1114
#, no-wrap
msgid ""
"    enum User {\n"
"        USER, ADMIN;\n"
"    }\n"
