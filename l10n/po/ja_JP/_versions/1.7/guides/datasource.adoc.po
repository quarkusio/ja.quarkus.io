#. type: Plain text
#: upstream/_versions/1.7/guides/datasource.adoc:89
msgid "The database kind defines which type of database you will connect to."
msgstr ""

#. type: Plain text
#: upstream/_versions/1.7/guides/datasource.adoc:91
msgid "We currently include these built-in database kinds:"
msgstr ""

#. type: Plain text
#: upstream/_versions/1.7/guides/datasource.adoc:93
msgid "DB2: `db2`"
msgstr ""

#. type: Plain text
#: upstream/_versions/1.7/guides/datasource.adoc:94
msgid "Derby: `derby`"
msgstr ""

#. type: Plain text
#: upstream/_versions/1.7/guides/datasource.adoc:95
msgid "H2: `h2`"
