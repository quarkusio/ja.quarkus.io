#: upstream/_versions/1.11/guides/datasource.adoc:498
#, no-wrap
msgid "H2"
msgstr ""

#. type: Plain text
#: upstream/_versions/1.11/guides/datasource.adoc:501
msgid "`jdbc:h2:{ {.|mem:}[name] | [file:]fileName | {tcp|ssl}:[//]server[:port][,server2[:port]]/name }[;key=value...]`"
