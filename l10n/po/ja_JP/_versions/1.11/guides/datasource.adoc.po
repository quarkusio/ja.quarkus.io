"quarkus.datasource.jdbc.max-size=16\n"
msgstr ""
"quarkus.datasource.jdbc.url=jdbc:postgresql://localhost:5432/hibernate_orm_test\n"
"quarkus.datasource.jdbc.max-size=16\n"

