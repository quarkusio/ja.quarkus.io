msgstr ""

#. type: Labeled list
#: upstream/_versions/2.16/guides/cdi-integration.adoc:575
#, no-wrap
msgid "SCOPES"
msgstr ""

#. type: Plain text
#: upstream/_versions/2.16/guides/cdi-integration.adoc:576
msgid "`Collection<ScopeInfo>` containing all scopes, including custom ones"
msgstr ""

#. type: Labeled list
#: upstream/_versions/2.16/guides/cdi-integration.adoc:576
#, no-wrap
msgid "QUALIFIERS"
msgstr ""

#. type: Plain text
#: upstream/_versions/2.16/guides/cdi-integration.adoc:577
msgid "`Map<DotName, ClassInfo>` containing all qualifiers"
msgstr ""

#. type: Labeled list
#: upstream/_versions/2.16/guides/cdi-integration.adoc:577
#, no-wrap
msgid "INTERCEPTOR_BINDINGS"
msgstr ""

#. type: Plain text
#: upstream/_versions/2.16/guides/cdi-integration.adoc:578
