msgstr ""

#. type: Labeled list
#: upstream/_versions/2.16/guides/cdi-integration.adoc:573
#, no-wrap
msgid "REMOVED_BEANS"
msgstr ""

#. type: Plain text
#: upstream/_versions/2.16/guides/cdi-integration.adoc:574
