msgstr ""

#. type: Plain text
#: upstream/_versions/2.16/guides/writing-extensions.adoc:2216
msgid "A convenience feature that allows you to control most of the above features from a single build item."
msgstr ""

#. type: Labeled list
#: upstream/_versions/2.16/guides/writing-extensions.adoc:2217
#, no-wrap
msgid "`io.quarkus.deployment.builditem.NativeImageEnableAllCharsetsBuildItem`"
msgstr ""

#. type: Plain text
#: upstream/_versions/2.16/guides/writing-extensions.adoc:2219
msgid "Indicates that all charsets should be enabled in native image."
msgstr ""

#. type: Labeled list
#: upstream/_versions/2.16/guides/writing-extensions.adoc:2220
#, no-wrap
