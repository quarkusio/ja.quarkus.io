"@BuildStep\n"
"@Record(value = ExecutionTime.RUNTIME_INIT, optional = true) // <1>\n"
"ExecutorBuildItem createExecutor( // <2>\n"
"        ExecutorRecorder recorder,\n"
"        ThreadPoolConfig threadPoolConfig\n"
") {\n"
