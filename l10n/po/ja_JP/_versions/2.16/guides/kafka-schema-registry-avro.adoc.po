#: upstream/_versions/2.16/guides/kafka-schema-registry-avro.adoc:222
#, no-wrap
msgid ""
"# disable auto-commit, Reactive Messaging handles it itself\n"
"mp.messaging.incoming.movies-from-kafka.enable.auto.commit=false\n"
msgstr ""

#. type: delimited block -
#: upstream/_versions/2.16/guides/kafka-schema-registry-avro.adoc:224
#, no-wrap
