msgstr ""

#. type: delimited block -
#: upstream/_versions/2.2/guides/quartz.adoc:310
#, no-wrap
msgid ""
"events {\n"
"    worker_connections   1000;\n"
"}\n"
msgstr ""

#. type: delimited block -
#: upstream/_versions/2.2/guides/quartz.adoc:319
#, no-wrap
msgid ""
"http {\n"
"        server {\n"
"              listen 8080;\n"
"              location / {\n"
"                proxy_pass http://tasks:8080; <1>\n"
"              }\n"
"        }\n"
"}\n"
msgstr ""

