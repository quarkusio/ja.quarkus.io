#. type: Title ==
#: upstream/_versions/2.2/guides/quartz.adoc:323
#, no-wrap
msgid "Setting Application Deployment"
msgstr "アプリケーションデプロイメントの設定"

#. type: Plain text
#: upstream/_versions/2.2/guides/quartz.adoc:326
msgid "In the root directory, create a `docker-compose.yml` file with the following content:"
msgstr "ルートディレクトリーに、以下の内容の `docker-compose.yml` ファイルを作成します。"

#. type: delimited block -
#: upstream/_versions/2.2/guides/quartz.adoc:330
#, no-wrap
msgid "version: '3'\n"
msgstr ""

#. type: delimited block -
#: upstream/_versions/2.2/guides/quartz.adoc:343
#, no-wrap
msgid ""
"services:\n"
"  tasks: <1>\n"
"    image: quarkus-quickstarts/quartz:1.0\n"
"    build:\n"
"      context: ./\n"
"      dockerfile: src/main/docker/Dockerfile.${QUARKUS_MODE:-jvm}\n"
"    environment:\n"
"      QUARKUS_DATASOURCE_URL: jdbc:postgresql://postgres/quarkus_test\n"
"    networks:\n"
"      - tasks-network\n"
"    depends_on:\n"
"      - postgres\n"
msgstr ""

#. type: delimited block -
#: upstream/_versions/2.2/guides/quartz.adoc:354
#, no-wrap
msgid ""
"  nginx: <2>\n"
"    image: nginx:1.17.6\n"
"    volumes:\n"
"      - ./nginx.conf:/etc/nginx/nginx.conf:ro\n"
"    depends_on:\n"
"      - tasks\n"
"    ports:\n"
"      - 8080:8080\n"
"    networks:\n"
"      - tasks-network\n"
msgstr ""

#. type: delimited block -
#: upstream/_versions/2.2/guides/quartz.adoc:366
#, no-wrap
msgid ""
"  postgres: <3>\n"
"    image: postgres:13.1\n"
"    container_name: quarkus_test\n"
"    environment:\n"
"      - POSTGRES_USER=quarkus_test\n"
"      - POSTGRES_PASSWORD=quarkus_test\n"
"      - POSTGRES_DB=quarkus_test\n"
"    ports:\n"
"      - 5432:5432\n"
"    networks:\n"
"      - tasks-network\n"
msgstr ""

#. type: delimited block -
#: upstream/_versions/2.2/guides/quartz.adoc:370
#, no-wrap
msgid ""
"networks:\n"
"  tasks-network:\n"
"    driver: bridge\n"
msgstr ""

