msgstr ""

#. type: delimited block -
#: upstream/_versions/2.2/guides/validation.adoc:172
#, no-wrap
msgid ""
"    public boolean isSuccess() {\n"
"        return success;\n"
"    }\n"
msgstr ""

#. type: delimited block -
#: upstream/_versions/2.2/guides/validation.adoc:174
#: upstream/_versions/2.2/guides/validation.adoc:410
#, no-wrap
msgid "}\n"
