#. type: Labeled list
#: upstream/_versions/2.7/guides/http-reference.adoc:157
#, no-wrap
msgid "`redirect`"
msgstr ""

#. type: Plain text
#: upstream/_versions/2.7/guides/http-reference.adoc:158
msgid "HTTP requests will be redirected to the HTTPS port"
msgstr ""

#. type: Labeled list
#: upstream/_versions/2.7/guides/http-reference.adoc:158
#, no-wrap
msgid "`disabled`"
msgstr ""

#. type: Plain text
#: upstream/_versions/2.7/guides/http-reference.adoc:159
