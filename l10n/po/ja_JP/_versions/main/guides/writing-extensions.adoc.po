#: upstream/_versions/main/guides/writing-extensions.adoc:1446
msgid "Primitives"
msgstr "プリミティブ"

#. type: Plain text
#: upstream/_versions/main/guides/writing-extensions.adoc:1447
msgid "String"
msgstr "文字列"

#. type: Plain text
#: upstream/_versions/main/guides/writing-extensions.adoc:1448
msgid "Class<?> objects"
msgstr ""

