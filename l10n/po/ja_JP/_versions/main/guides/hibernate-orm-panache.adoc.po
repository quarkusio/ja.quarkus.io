msgstr ""

#. type: delimited block -
#: upstream/_versions/main/guides/hibernate-orm-panache.adoc:493
#, no-wrap
msgid ""
"    @GET\n"
"    @Path(\"/count\")\n"
"    public Long count() {\n"
"        return Person.count();\n"
"    }\n"
"}\n"
msgstr ""

#. type: Plain text
#: upstream/_versions/main/guides/hibernate-orm-panache.adoc:497
