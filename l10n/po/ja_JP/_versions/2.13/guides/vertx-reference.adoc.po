#: upstream/_versions/2.13/guides/vertx-reference.adoc:1017
#, no-wrap
msgid "quarkus.vertx.prefer-native-transport=true\n"
msgstr ""

#. type: Plain text
#: upstream/_versions/2.13/guides/vertx-reference.adoc:955
msgid "Or in `application.yml`:"
msgstr ""

#. type: delimited block -
#: upstream/_versions/2.13/guides/vertx-reference.adoc:961
#, no-wrap
msgid ""
"quarkus:\n"
"  vertx:\n"
"    prefer-native-transport: true\n"
