#!/usr/bin/env bash
set -eu

#
# This script updates translation stats files
#

SCRIPT_DIR=$(cd $(dirname $0); pwd)
L10N_HOME=$(cd $(dirname $SCRIPT_DIR); pwd)
cd $L10N_HOME

export TARGET_LANG=`jq ".targetLang" config/l10n-kit.json -r`

echo "Filename, Fuzzy Messages, Total Messages, Fuzzy Words, Total Words, Achievement" > l10n/stats/main-guides-translation.csv
pocount --csv `find l10n/po/$TARGET_LANG/_versions/main -name "*.po"` | awk -F ',' 'NR>1 && $9>0 {print $1 "," $5 ","$9","$6","$10","100-int($6*100/$10) "%"}' | sort -t "," -k4,4nr -k1,1 >> l10n/stats/main-guides-translation.csv

echo "Filename, Fuzzy Messages, Total Messages, Fuzzy Words, Total Words, Achievement" > l10n/stats/2.13-guides-translation.csv
pocount --csv `find l10n/po/$TARGET_LANG/_versions/2.13 -name "*.po"` | awk -F ',' 'NR>1 && $9>0 {print $1 "," $5 "," $9 "," $6 "," $10 "," 100-int($6*100/$10) "%"}' | sort -t "," -k4,4nr -k1,1 >> l10n/stats/2.13-guides-translation.csv

echo "Filename, Fuzzy Messages, Total Messages, Fuzzy Words, Total Words, Achievement" > l10n/stats/3.0-guides-translation.csv
pocount --csv `find l10n/po/$TARGET_LANG/_versions/3.0 -name "*.po"` | awk -F ',' 'NR>1 && $9>0 {print $1 "," $5 "," $9 "," $6 "," $10 "," 100-int($6*100/$10) "%"}' | sort -t "," -k4,4nr -k1,1 >> l10n/stats/3.0-guides-translation.csv

echo "Filename, Fuzzy Messages, Total Messages, Fuzzy Words, Total Words, Achievement" > l10n/stats/latest-guides-translation.csv
pocount --csv `find l10n/po/$TARGET_LANG/_guides/ -name "*.po"` | awk -F ',' 'NR>1 && $9>0 {print $1 "," $5 "," $9 "," $6 "," $10 "," 100-int($6*100/$10) "%"}' | sort -t "," -k4,4nr -k1,1 >> l10n/stats/latest-guides-translation.csv

echo "Filename, Fuzzy Messages, Total Messages, Fuzzy Words, Total Words, Achievement" > l10n/stats/posts-translation.csv
pocount --csv `find l10n/po/$TARGET_LANG/_posts/ -name "*.po"`  | awk -F ',' 'NR>1 && $9>0 {print $1 "," $5 "," $9 "," $6 "," $10 "," 100-int($6*100/$10) "%"}' | sort -t "," -k4,4nr -k1,1r >> l10n/stats/posts-translation.csv

echo "Filename, Fuzzy Messages, Total Messages, Fuzzy Words, Total Words, Achievement" > l10n/stats/misc-translation.csv
pocount --csv `find l10n/po/$TARGET_LANG/_includes/ -name "*.po"`  | awk -F ',' 'NR>1 && $9>0 {print $1 "," $5 "," $9 "," $6 "," $10 "," 100-int($6*100/$10) "%"}' | sort -t "," -k4,4nr -k1,1 >> l10n/stats/misc-translation.csv
pocount --csv `find l10n/po/$TARGET_LANG/_data/ -name "*.po"`  | awk -F ',' 'NR>1 && $9>0 {print $1 "," $5 "," $9 "," $6 "," $10 "," 100-int($6*100/$10) "%"}' | sort -t "," -k4,4nr -k1,1 >> l10n/stats/misc-translation.csv
