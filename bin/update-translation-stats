#!/usr/bin/env bash
set -eu

SCRIPT_DIR=$(cd $(dirname $0); pwd)
L10N_HOME=$(cd $(dirname $SCRIPT_DIR); pwd)
cd $L10N_HOME

source config/l10n-kit.conf

echo "Filename, Fuzzy Messages, Total Messages, Fuzzy Words, Total Words, Achievement" > l10n/stats/translation.csv
pocount --csv `find l10n/po/ja_JP/_posts/ -name "*.adoc.po"`  | awk -F ',' 'NR>1 && $9>0 {print $1 "," $5 "," $9 "," $6 "," $10 "," 100-int($6*100/$10) "%"}' | sort --reverse -t, -nk6 >> l10n/stats/translation.csv
pocount --csv `find l10n/po/ja_JP/_guides/ -name "*.adoc.po"` | awk -F ',' 'NR>1 && $9>0 {print $1 "," $5 "," $9 "," $6 "," $10 "," 100-int($6*100/$10) "%"}' | sort --reverse -t, -nk6 >> l10n/stats/translation.csv
