#!/usr/bin/env bash
set -eu

SCRIPT_DIR=$(cd $(dirname $0); pwd)
I18N_HOME=$(cd $(dirname $SCRIPT_DIR); pwd)

cd $I18N_HOME
git add upstream

set +e
git diff --cached --exit-code --quiet

if [[ $? -eq 1 ]] ; then
  set -e
  git commit -m "Update upstream"
  git fetch
  git rebase origin/master
  git push origin master
fi
set -e
