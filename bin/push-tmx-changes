#!/usr/bin/env bash
set -eu

#
# This script pushes tmx changes to git remote repository.
# This is designed to be used in CI workflow only. DO NOT call manually.
#

SCRIPT_DIR=$(cd $(dirname $0); pwd)
L10N_HOME=$(cd $(dirname $SCRIPT_DIR); pwd)
cd $L10N_HOME

export TMX_FILE_PATH=`jq ".tmx.filePath" config/l10n-kit.json -r`

git add $TMX_FILE_PATH

set +e
git diff --cached --exit-code --quiet

if [[ $? -eq 1 ]] ; then
  set -e
  git commit -m "Update tmx"
  git fetch
  git rebase origin/main
  git push origin main
fi
set -e
