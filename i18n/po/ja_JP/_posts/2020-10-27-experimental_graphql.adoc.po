msgstr  ""

#. type: delimited block -
#: upstream/_posts/2020-10-27-experimental_graphql.adoc:416
#, no-wrap
msgid   "    public Being() {\n"
        "    }\n"
msgstr  ""

#. type: delimited block -
#: upstream/_posts/2020-10-27-experimental_graphql.adoc:420
#, no-wrap
msgid   "    public Being(T being) {\n"
        "        this.being = being;\n"
        "    }\n"
msgstr  ""

#. type: delimited block -
